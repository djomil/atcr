<div id="container" style="min-width: 300px; height: 400px; margin: 0 auto"></div>

    <script>
Highcharts.chart('container', {
    chart: {
        type: 'column'
    },
    title: {
        text: 'Share of cancer deaths attributed to risk factors, 2016'
    },
    subtitle: {
        text: 'Global share of cancer deaths are attributed to the range of linked risk factors. These include known risks such as smoking, diet and nutrition, obesity, physical inactivity, alcohol consumption, air pollution, and environmental exposures. The remaining share therefore represents deaths which would be expected to have occurred in the absence of any risk factors. Source: <a href="https://ourworldindata.org/grapher/share-of-cancer-deaths-attributed-to-risk-factors" target="_blank">ourworldindata.org</a>'
    },
    xAxis: {
        type: 'category',
        labels: {
            rotation: -45,
            style: {
                fontSize: '13px',
                fontFamily: 'Verdana, sans-serif'
            }
        }
    },
    yAxis: {
        min: 0,
        title: {
            text: 'Cancer deaths attributed to risk factors(%)' //fix the text, incorrect! 
        }
    },
    legend: {
        enabled: false
    },
    tooltip: {
        pointFormat: 'Population in 2017: <b>{point.y:.1f} millions</b>'
    },
    series: [{
        name: 'Risk Factors',
        data: [
            ['Cervical Cancer', 100.0],
            ['Mesothelioma', 91.4],
            ['Larynx cancer', 71.8],
            ['Lip and oral cavity cancer', 69.8],
            ['Esophageal cancer', 69.8],
            ['Colon and rectum cancer', 53.2],
            ['Liver cancer', 41.5],
            ['Uterine cancer', 36.5],
            ['Kidney cancer', 32.3],
            ['Bladder cancer', 32.0],
            ['Liver cancer', 41.5],
            ['Pancreatic cancer', 27.5],
            ['Breast cancer', 26.8],
            ['Gallbladder and biliary tract cancer', 15.0],
            ['Leukemia', 14.8],
            ['Ovarian cancer', 12.3],
            ['Thyroid cancer', 9.4],
            ['Multiple myeloma', 6.8],
            ['Non-Hodgkin lymphoma', 5.1],
            ['Prostate cancer', 4.4]
        ],
        dataLabels: {
            enabled: true,
            rotation: -90,
            color: '#FFFFFF',
            align: 'right',
            format: '{point.y:.1f}', // one decimal
            y: 10, // 10 pixels down from the top
            style: {
                fontSize: '13px',
                fontFamily: 'Verdana, sans-serif'
            }
        }
    }]
});

    
    </script>
    
   
</body>
    
    





<table>
  <thead>
    <tr>
      <th>Cause</th>
      <th>Year</th>
      <th>Share deaths</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @riskfactorcancerdeaths.each do |riskfactorcancerdeath| %>
      <tr>
        <td><%= riskfactorcancerdeath.cause %></td>
        <td><%= riskfactorcancerdeath.year %></td>
        <td><%= riskfactorcancerdeath.share_deaths %></td>
        <td><%= link_to 'Show', riskfactorcancerdeath %></td>
        <td><%= link_to 'Edit', edit_riskfactorcancerdeath_path(riskfactorcancerdeath) %></td>
        <td><%= link_to 'Destroy', riskfactorcancerdeath, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

