<% if notice %>
<aside id="notice"><%= notice %></aside>
<% end %>

<h2>ATCR Cart</h2>


<table>
<% @cart.line_items.each do |line_item| %>
<tr>
<td class="quantity"><%= line_item.quantity %> &times; <%= line_item.rehab.name %></td>
<td class="price"><%= number_to_currency(line_item.total_price) %></td>
</tr>
<% end %>
<tfoot>
<tr>
<th colspan="2">Total:</th>
<td class="price"><%= number_to_currency(@cart.total_price) %></td>
</tr>
</tfoot>
</table>

<%= button_to 'Empty cart', @cart, method: :delete, data: { confirm: 'Are you sure?' } %>
 <%= button_to 'Checkout', new_orderinshop_path, method: :get, class: "checkout"%>




